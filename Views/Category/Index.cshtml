@using ClinicManagement.Menu
@inject AdminSidebarService _AdminSidebarService
@model IEnumerable<ClinicManagement.Models.Category>

@{
    ViewData["Title"] = "Danh mục thuốc";
    SortModel sortModel = (SortModel)ViewData["sortModel"];

    PagerModel pager = ViewBag.Pager;
}
<partial name="_StatusMessage" />

@* 
<h1>Index</h1> *@
<div class="container-fluid btn-group">
<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i></a>
</p>
</div>
<br/>

<div class="row">
    <div class="col-12">
        <partial name="_topBar" model="@pager" />
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <i class="@sortModel.GetColumn("name").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("name").SortExpression">
                    @Html.DisplayNameFor(model => model.Name)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("description").SortIcon" arial-hidden="true"></i>

                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("description").SortExpression">
                    @Html.DisplayNameFor(model => model.Descriptions)
                </a>
            </th>
            <th>
                 <i class="@sortModel.GetColumn("description").SortIcon" arial-hidden="true"></i>

                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("ParentCategory").SortExpression">
                    @Html.DisplayNameFor(model => model.ParentCategory)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        await RenderCategory(item,0);
}
    </tbody>
</table>

<div class="row">
    <div class="col-12">
        <partial name="_bottomBar" model="@pager" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}
@{
    async Task RenderCategory(Category item,int lever)
    {
        string prefix=string.Concat(Enumerable.Repeat("&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;",lever));
        <tr>
            <td>
               @Html.Raw(prefix)+ @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentCategory.Name)
            </td>
            <td>
                 <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.ID">
                            <span class="btn btn-sm btn-outline-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                            </span>
                        </a>

                        <a asp-action="Details" asp-route-id="@item.ID">
                            <span class="btn btn-sm btn-outline-dark">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </span>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.ID">
                            <span class="btn btn-sm btn-outline-danger">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </span>
                        </a>
               
            </td>
        </tr>
        if(item.CategoryChildren?.Count>0)
        {
            lever++;
            foreach (var i in item.CategoryChildren)
            {
                await RenderCategory(i,lever);
            }
        }
    }
}